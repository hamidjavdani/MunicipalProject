@page
@using MunicipalityManagement.Infrastructure.Configuration.Permissions
@model ServiceHost.Areas.UserAreas.Pages.Request.IndexModel
@{

}

@{
    Layout = "Shared/_UsersLayout";
ViewData["title"] = "مدیریت درخواست ها";
}


<div class="col-md-12 col-sm-12 col-xs-12">
    <form method="post">
        <input type="text" class="form-control" onchange="GetEngineers(4,3000)">

    </form>
</div>

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a Permission="@MunicipalityPermissions.CreatelistBoxCategory" 
               class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")"> درخواست جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست درخواست ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>کد نوسازی ملک</th>
                                    <th>مالک</th>
                                    <th>عنوان درخواست</th>

                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                                           



                                @foreach (var item in Model.Request)
                            {
                            <tr>
                                    <td>@item.Codenosazi</td>
                                    <td>@item.Name</td>
                                    <td>@item.Onvandarkhast</td>

                                      <td>
                                        <a Permission="@MunicipalityPermissions.EditListBoxCategory"  class="btn btn-warning pull-right m-rl-5"
                                           href="#showmodal=@Url.Page("./Index1", "Edit", new { id = item.AccountId})">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>
                                    </td>
                                    <td>
                                        <a Permission="@MunicipalityPermissions.DeleteListBoxCategory"  class="btn btn-warning pull-right m-rl-5"
                                           href="#showmodal=@Url.Page("./Index1", "Edit", new { id = item.AccountId})">
                                            <i class="fa fa-remove"></i> حذف
                                        </a>
                                    </td>
                                </tr>
                            }






                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/lib/api/JavaScript.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}