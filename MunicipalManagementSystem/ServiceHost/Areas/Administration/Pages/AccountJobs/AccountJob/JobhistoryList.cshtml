@page
@model ServiceHost.Areas.Administration.Pages.AccountJobs.AccountJob.JobhistoryListModel
@{
    Layout = "Shared/_AdminLayout";
ViewData["title"] = "تاریخچه مشاغل";
}

<style>
    tr:hover td {
        background-color: #dcd6d6;
    }
</style>



<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">

            
            
            <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; 
                 border-radius:2px;font-size:16px;">
                <span style="font-weight:bold;">
                    <i class="glyphicon glyphicon-user"></i>
                    تاریخچه مشاغل <span style="color:darkgreen;">

                        @Model._accountname

                    </span>
                </span>
            </div>



            <div class="panel panel-body container-fluid">



                <div class="row">

                
                    <div style="margin-bottom:5px;">
                     
                        <a class="btn btn-warning waves-effect waves-light m-b-5"
                           asp-page="Create"
                             asp-route-idaccount="@Model._accountid"
                             asp-route-accountname="@Model._accountname">
                           
                            <i class="fa fa-inverse"></i> انتساب شغل
                        </a>

                    </div>
                 




                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable"
                               class="table table-striped table-bordered">
                            @*<div class="table-responsive"
                                         style="border:1px solid gray;
                border-radius:2px; box-shadow:3px 3px 1px 0 gray;">
                                        <table class="table table-bordered"
                                               id="datatable"
                                               style="background-color:white;">*@

                            <thead>
                                @*<tr style="background-color:#747eb9;">*@
                                <tr style="background-color:#c8e5f6;">
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>نام</th>
                                    <th>نام کاربری</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.AccountJob)
                            {
                                <tr>
                                        <td>@item.AccountName</td>
                                        <td>
                                            @*<img src="~/ProductPictures/@item.ProfilePhoto" style="width: 70px; height: 70px" />*@
                                        </td>
                                        <td>@item.JobName</td>
                                        <td>@item.JobId</td>


                                        <td>
                                            <a class="btn btn-warning waves-red waves-light m-b-5"
                                               asp-page="JobhistoryList"
                                               asp-route-idaccount="@item.JobId"
                                               asp-route-accountname="@item.JobId">
                                                <i class="fa fa-edit"></i>  گرفتن شغل
                                            </a>




                                        </td>
                                    </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
