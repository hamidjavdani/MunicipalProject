@model PersonManagement.Application.Contracts.Person.CreatePerson
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد شخص جدید</h4>
</div>

<form asp-page="./Indexmalek" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">نام خانوادگی</label>
                    <input type="text" class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="error"></span>
                </div>
            </div>


        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Parent" class="control-label">نام پدر</label>
                    <input type="text" class="form-control" asp-for="Parent">
                    <span asp-validation-for="Parent" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MelliCode" class="control-label">کد ملی</label>
                    <input type="text" class="form-control" asp-for="MelliCode">
                    <span asp-validation-for="MelliCode" class="error"></span>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Shenasnameh" class="control-label"> شماره شناسنامه</label>
                    <input type="text" class="form-control" asp-for="Shenasnameh">
                    <span asp-validation-for="Shenasnameh" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BirthDayDate" class="control-label">تاریخ تولد</label>
                    <input type="text" class="form-control persianDateInput" asp-for="BirthDayDate">
                    <span asp-validation-for="BirthDayDate" class="error"></span>
                </div>
            </div>


        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Mobile" class="control-label">موبایل</label>
                    <input type="text" class="form-control" asp-for="Mobile">
                    <span asp-validation-for="Mobile" class="error"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label">  جنسیت </label>

                    </div>

                </div>

                <div class="col-md-5">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-xs-12"></label>
                        <label class="col-md-3 col-xs-6">
                            مرد
                            <input asp-for="Gender" type="radio" id="Gender" name="Gender" value="1" />
                        </label>
                        <label class="col-md-3 col-xs-6">
                            زن
                            <input asp-for="Gender" type="radio" id="Gender" name="Gender" value="2" />
                        </label>
                    </div>
                </div>



            </div>



        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ImagePath" class="control-label">
                        عکس

                    </label>
                    <input type="file" class="form-control" asp-for="ImagePath" accept="image/*">
                    <span asp-validation-for="ImagePath" class="error"></span>
                </div>
            </div>
        </div>



    </div>
        

        
  
        <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>