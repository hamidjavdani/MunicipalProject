<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست املاک</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered" border="1">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>کد نوسازی</th>
                                    <th>آدرس</th>
                                    <th>مساحت پلاک</th>
                                    <th>کاربری طرح جامع</th>
                                    <th>نوع سند</th>
                                    
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.melkcategories)
                            {
                            <tr>
                                    <td>@item.Id</td>
                                    @*<td>
            <img src="~/ProductPictures/@item.Codenosazi" style="width: 70px; height: 70px" />
        </td>*@
                                    <td>@item.Codenosazi</td>
                                    <td>@item.Address</td>
                                    <td>@item.Masahatsanad</td>
                                    <td>@item.namekarbaritarhjameh</td>
                                    <td>@item.nametypesanad</td>
                                    <td>
                                        <a class="btn btn-warning pull-right m-rl-5"
                                           href="#showmodal=@Url.Page("./Indexkarbaribaft", "Edit", new { id = item.Id})">
                                            <i class="fa fa-edit"></i> ویرایش کاربری بافت
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
