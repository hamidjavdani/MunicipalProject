@model MunicipalityManagement.Application.Contracts.ListBox.CreateListBox
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"
            aria-hidden="true">
        ×
    </button>
    <h4 class="modal-title">ایجاد  گروه لیست</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
   
    <div class="modal-body">
        <div class="row">
            <div class="col-md-7">
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">عنوان گروه </label>
                    <select class="form-control" asp-for="CategoryId"
                            asp-items='new SelectList(Model.Categories, "Id", "Name")'>
                        <option value="0">عنوان گروه </option>
                    </select>
                    <span asp-validation-for="CategoryId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-7">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">عنوان  </label>
                    <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>

        </div>


    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>

